<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold">Users</h1>
  <%= link_to "New User", new_admin_user_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 text-sm" %>
</div>

<div class="overflow-x-auto bg-white shadow-sm rounded-xl">
  <table class="min-w-full divide-y divide-gray-200 text-sm">
    <thead class="bg-gray-50 text-left text-gray-600 uppercase text-xs">
      <tr>
        <th class="px-6 py-3">ID</th>
        <th class="px-6 py-3">Name</th>
        <th class="px-6 py-3">Email</th>
        <th class="px-6 py-3">Role</th>
        <th class="px-6 py-3">Joined</th>
        <th class="px-6 py-3"></th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100">
      <% @users.each do |user| %>
        <tr>
          <td class="px-6 py-4 font-mono text-gray-500"><%= user.id %></td>
          <td class="px-6 py-4"><%= "#{user.first_name} #{user.last_name}" %></td>
          <td class="px-6 py-4 text-gray-700"><%= user.email_address %></td>
          <td class="px-6 py-4"><%= user.role.presence || "â€”" %></td>
          <td class="px-6 py-4 text-gray-500"><%= user.created_at.strftime("%b %d, %Y") %></td>
          <td class="px-6 py-4 text-right">
            <%= link_to "Edit", edit_admin_user_path(user), class: "text-blue-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
