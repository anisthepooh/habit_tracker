<div class="space-y-8">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-semibold">Design System</h1>
    <span class="text-sm text-muted-foreground">Bite Habit Design Documentation</span>
  </div>

  <!-- Color Palette -->
  <section class="bg-white rounded-xl p-6 shadow">
    <h2 class="text-lg font-medium mb-4">Color Palette</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Primary Colors -->
      <div>
        <h3 class="text-sm font-medium mb-3 text-muted-foreground">Primary</h3>
        <div class="space-y-2">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-primary rounded-lg border"></div>
            <div>
              <div class="text-sm font-medium">Primary</div>
              <div class="text-xs text-muted-foreground">hsl(12, 6%, 15%)</div>
              <code class="text-xs bg-gray-100 px-1 rounded">bg-primary</code>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-primary-foreground rounded-lg border"></div>
            <div>
              <div class="text-sm font-medium">Primary Foreground</div>
              <div class="text-xs text-muted-foreground">hsl(20, 6%, 90%)</div>
              <code class="text-xs bg-gray-100 px-1 rounded">text-primary-foreground</code>
            </div>
          </div>
        </div>
      </div>

      <!-- Background Colors -->
      <div>
        <h3 class="text-sm font-medium mb-3 text-muted-foreground">Background</h3>
        <div class="space-y-2">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-background rounded-lg border"></div>
            <div>
              <div class="text-sm font-medium">Background</div>
              <div class="text-xs text-muted-foreground">hsl(60, 9%, 98%)</div>
              <code class="text-xs bg-gray-100 px-1 rounded">bg-background</code>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-foreground rounded-lg border"></div>
            <div>
              <div class="text-sm font-medium">Foreground</div>
              <div class="text-xs text-muted-foreground">hsl(20, 14%, 4%)</div>
              <code class="text-xs bg-gray-100 px-1 rounded">text-foreground</code>
            </div>
          </div>
        </div>
      </div>

      <!-- Accent Gradient -->
      <div>
        <h3 class="text-sm font-medium mb-3 text-muted-foreground">Accent Gradient</h3>
        <div class="space-y-2">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-[linear-gradient(120deg,_#ffd9a0_20%,_#ff7f7f_60%,_#ff5ec4_90%)] rounded-lg border"></div>
            <div>
              <div class="text-sm font-medium">Brand Gradient</div>
              <div class="text-xs text-muted-foreground">Orange → Red → Pink</div>
              <code class="text-xs bg-gray-100 px-1 rounded">bg-[linear-gradient(...)]</code>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Typography -->
  <section class="bg-white rounded-xl p-6 shadow">
    <h2 class="text-lg font-medium mb-4">Typography</h2>
    
    <div class="space-y-4">
      <div>
        <div class="text-4xl md:text-5xl font-semibold mb-2">Hero Heading</div>
        <code class="text-xs bg-gray-100 px-2 py-1 rounded">text-4xl md:text-5xl font-semibold</code>
      </div>
      
      <div>
        <div class="text-2xl font-semibold mb-2">Section Heading</div>
        <code class="text-xs bg-gray-100 px-2 py-1 rounded">text-2xl font-semibold</code>
      </div>
      
      <div>
        <div class="text-lg font-medium mb-2">Card Heading</div>
        <code class="text-xs bg-gray-100 px-2 py-1 rounded">text-lg font-medium</code>
      </div>
      
      <div>
        <div class="text-base mb-2">Body Text</div>
        <code class="text-xs bg-gray-100 px-2 py-1 rounded">text-base</code>
      </div>
      
      <div>
        <div class="text-sm text-muted-foreground mb-2">Secondary Text</div>
        <code class="text-xs bg-gray-100 px-2 py-1 rounded">text-sm text-muted-foreground</code>
      </div>
      
      <div>
        <div class="text-xs font-medium text-muted-foreground uppercase tracking-wider mb-2">LABEL TEXT</div>
        <code class="text-xs bg-gray-100 px-2 py-1 rounded">text-xs font-medium text-muted-foreground uppercase tracking-wider</code>
      </div>
    </div>
  </section>

  <!-- Components -->
  <section class="bg-white rounded-xl p-6 shadow">
    <h2 class="text-lg font-medium mb-4">Components</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Buttons -->
      <div>
        <h3 class="text-sm font-medium mb-3 text-muted-foreground">Buttons</h3>
        <div class="space-y-3">
          <%= render ButtonComponent.new(variant: :default) do %>
            Primary Button
          <% end %>
          
          <%= render ButtonComponent.new(variant: :secondary) do %>
            Secondary Button
          <% end %>
          
          <%= render ButtonComponent.new(variant: :outline) do %>
            Outline Button
          <% end %>
          
          <%= render ButtonComponent.new(variant: :ghost) do %>
            Ghost Button
          <% end %>
        </div>
      </div>

      <!-- Cards -->
      <div>
        <h3 class="text-sm font-medium mb-3 text-muted-foreground">Cards</h3>
        <div class="space-y-3">
          <!-- Primary Card -->
          <div class="bg-primary rounded-2xl p-4 text-white">
            <div class="text-sm font-medium text-stone-200 mb-2">Primary Card</div>
            <div class="text-lg font-semibold">Dark background card</div>
            <code class="text-xs bg-white/20 px-2 py-1 rounded">bg-primary rounded-2xl p-4</code>
          </div>
          
          <!-- White Card -->
          <div class="bg-white rounded-xl p-4 shadow-sm border">
            <div class="text-sm font-medium text-muted-foreground mb-2">White Card</div>
            <div class="text-lg font-semibold">Light background card</div>
            <code class="text-xs bg-gray-100 px-2 py-1 rounded">bg-white rounded-xl p-4 shadow-sm</code>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stat Cards -->
  <section class="bg-white rounded-xl p-6 shadow">
    <h2 class="text-lg font-medium mb-4">Stat Cards</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%= render StatCardComponent.new(
        title: "Example Stat",
        count: 1234,
        data_description: "Sample description text",
        growth_in_procent: 12.5,
        class: "p-4"
      ) %>
      
      <%= render StatCardComponent.new(
        title: "With Icon",
        count: 567,
        data_description: "Custom icon example",
        icon: "users",
        class: "p-4"
      ) %>
      
      <%= render StatCardComponent.new(
        title: "Simple",
        count: 89,
        data_description: "Minimal stat card",
        class: "p-4"
      ) %>
    </div>
    
    <div class="mt-4 p-4 bg-gray-50 rounded-lg">
      <h4 class="text-sm font-medium mb-2">Usage</h4>
      <pre class="text-xs text-gray-600 overflow-x-auto"><code>&lt;%= render StatCardComponent.new(
  title: "Users",
  count: 1234,
  data_description: "Active users this month",
  growth_in_procent: 12.5,
  icon: "users"
) %&gt;</code></pre>
    </div>
  </section>

  <!-- Form Elements -->
  <section class="bg-white rounded-xl p-6 shadow">
    <h2 class="text-lg font-medium mb-4">Form Elements</h2>
    
    <div class="space-y-4 max-w-md">
      <div>
        <label class="block text-sm font-medium mb-2">Text Input</label>
        <input type="text" placeholder="Enter text..." 
               class="appearance-none w-full rounded-xl bg-white border border-border py-3 px-4 text-base focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-all shadow-sm">
      </div>
      
      <div>
        <label class="block text-sm font-medium mb-2">Select Dropdown</label>
        <select class="appearance-none w-full rounded-xl bg-white border border-border py-3 px-4 text-base focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-all shadow-sm">
          <option>Select an option</option>
          <option>Option 1</option>
          <option>Option 2</option>
        </select>
      </div>
      
      <div>
        <label class="block text-sm font-medium mb-2">Textarea</label>
        <textarea placeholder="Enter description..." rows="3"
                  class="appearance-none w-full rounded-xl bg-white border border-border py-3 px-4 text-base focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-all shadow-sm resize-none"></textarea>
      </div>
    </div>
  </section>

  <!-- Spacing & Layout -->
  <section class="bg-white rounded-xl p-6 shadow">
    <h2 class="text-lg font-medium mb-4">Spacing & Layout</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Padding -->
      <div>
        <h3 class="text-sm font-medium mb-3 text-muted-foreground">Padding Scale</h3>
        <div class="space-y-2">
          <div class="bg-blue-100 p-2 rounded"><code class="text-sm">p-2 (8px)</code></div>
          <div class="bg-blue-100 p-4 rounded"><code class="text-sm">p-4 (16px)</code></div>
          <div class="bg-blue-100 p-6 rounded"><code class="text-sm">p-6 (24px)</code></div>
        </div>
      </div>
      
      <!-- Border Radius -->
      <div>
        <h3 class="text-sm font-medium mb-3 text-muted-foreground">Border Radius</h3>
        <div class="space-y-2">
          <div class="bg-gray-200 p-3 rounded-md"><code class="text-sm">rounded-md (6px)</code></div>
          <div class="bg-gray-200 p-3 rounded-lg"><code class="text-sm">rounded-lg (8px)</code></div>
          <div class="bg-gray-200 p-3 rounded-xl"><code class="text-sm">rounded-xl (12px)</code></div>
          <div class="bg-gray-200 p-3 rounded-2xl"><code class="text-sm">rounded-2xl (16px)</code></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Shadows -->
  <section class="bg-white rounded-xl p-6 shadow">
    <h2 class="text-lg font-medium mb-4">Shadows</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="bg-white p-4 rounded-lg shadow-sm border">
        <div class="text-sm font-medium">shadow-sm</div>
        <div class="text-xs text-muted-foreground">Subtle shadow</div>
      </div>
      
      <div class="bg-white p-4 rounded-lg shadow border">
        <div class="text-sm font-medium">shadow</div>
        <div class="text-xs text-muted-foreground">Default shadow</div>
      </div>
      
      <div class="bg-white p-4 rounded-lg shadow-md border">
        <div class="text-sm font-medium">shadow-md</div>
        <div class="text-xs text-muted-foreground">Medium shadow</div>
      </div>
      
      <div class="bg-white p-4 rounded-lg shadow-lg border">
        <div class="text-sm font-medium">shadow-lg</div>
        <div class="text-xs text-muted-foreground">Large shadow</div>
      </div>
    </div>
  </section>

  <!-- Sidebar Components -->
  <section class="bg-white rounded-xl p-6 shadow">
    <h2 class="text-lg font-medium mb-4">Sidebar Components</h2>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Sidebar Link Component -->
      <div>
        <h3 class="text-sm font-medium mb-3 text-muted-foreground">SidebarLinkComponent</h3>
        <div class="bg-gray-50 p-4 rounded-lg space-y-2">
          <%= render SidebarLinkComponent.new(
            path: "#",
            icon: "circle-gauge",
            label: "Dashboard",
            active: true
          ) %>
          
          <%= render SidebarLinkComponent.new(
            path: "#",
            icon: "users",
            label: "Users",
            active: false
          ) %>
          
          <%= render SidebarLinkComponent.new(
            path: "https://example.com",
            icon: "external-link",
            label: "External Link",
            external: true
          ) %>
        </div>
        
        <div class="mt-3 p-3 bg-gray-50 rounded-lg">
          <h4 class="text-xs font-medium mb-2">Usage</h4>
          <pre class="text-xs text-gray-600 overflow-x-auto"><code>&lt;%= render SidebarLinkComponent.new(
  path: admin_dashboard_path,
  icon: "circle-gauge",
  label: "Dashboard",
  active: controller_name == "dashboard"
) %&gt;</code></pre>
        </div>
      </div>

      <!-- Sidebar Sub Link Component -->
      <div>
        <h3 class="text-sm font-medium mb-3 text-muted-foreground">SidebarSubLinkComponent</h3>
        <div class="bg-gray-50 p-4 rounded-lg space-y-2 ml-6">
          <%= render SidebarSubLinkComponent.new(
            path: "#",
            icon: "users",
            label: "All Users",
            active: true
          ) %>
          
          <%= render SidebarSubLinkComponent.new(
            path: "#",
            icon: "git-pull-request",
            label: "Beta Requests",
            active: false
          ) %>
        </div>
        
        <div class="mt-3 p-3 bg-gray-50 rounded-lg">
          <h4 class="text-xs font-medium mb-2">Usage</h4>
          <pre class="text-xs text-gray-600 overflow-x-auto"><code>&lt;%= render SidebarSubLinkComponent.new(
  path: admin_users_path,
  icon: "users",
  label: "All Users",
  active: action_name == "index"
) %&gt;</code></pre>
        </div>
      </div>
    </div>

    <!-- Sidebar Accordion Component -->
    <div class="mt-6">
      <h3 class="text-sm font-medium mb-3 text-muted-foreground">SidebarAccordionComponent</h3>
      <div class="bg-gray-50 p-4 rounded-lg" x-data="{ usersOpen: true }">
        <%= render SidebarAccordionComponent.new(
          icon: "user",
          label: "Users",
          open: true,
          controller_active: true
        ) do %>
          <%= render SidebarSubLinkComponent.new(
            path: "#",
            icon: "users",
            label: "All Users",
            active: true
          ) %>
          <%= render SidebarSubLinkComponent.new(
            path: "#",
            icon: "git-pull-request", 
            label: "Beta Requests",
            active: false
          ) %>
        <% end %>
      </div>
      
      <div class="mt-3 p-3 bg-gray-50 rounded-lg">
        <h4 class="text-xs font-medium mb-2">Usage</h4>
        <pre class="text-xs text-gray-600 overflow-x-auto"><code>&lt;%= render SidebarAccordionComponent.new(
  icon: "user",
  label: "Users", 
  open: controller_name == "users",
  controller_active: controller_name == "users"
) do %&gt;
  &lt;%= render SidebarSubLinkComponent.new(...) %&gt;
&lt;% end %&gt;</code></pre>
      </div>
    </div>

    <div class="mt-4 p-4 bg-blue-50 rounded-lg border border-blue-200">
      <h4 class="text-sm font-medium mb-2 text-blue-900">Component Features</h4>
      <ul class="text-xs text-blue-800 space-y-1">
        <li>• <strong>SidebarLinkComponent:</strong> Standard navigation links with active states and external link support</li>
        <li>• <strong>SidebarSubLinkComponent:</strong> Smaller sub-navigation links for use within accordions</li>
        <li>• <strong>SidebarAccordionComponent:</strong> Collapsible sections with Alpine.js animations</li>
        <li>• <strong>Consistent styling:</strong> All components follow the same design patterns</li>
        <li>• <strong>Active state detection:</strong> Automatic highlighting based on current controller/action</li>
      </ul>
    </div>
  </section>

  <!-- Icons -->
  <section class="bg-white rounded-xl p-6 shadow">
    <h2 class="text-lg font-medium mb-4">Icons</h2>
    
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
      <div class="flex flex-col items-center gap-2 p-3 rounded-lg bg-gray-50">
        <%= lucide_icon("users", class: "w-6 h-6") %>
        <span class="text-xs text-center">users</span>
      </div>
      
      <div class="flex flex-col items-center gap-2 p-3 rounded-lg bg-gray-50">
        <%= lucide_icon("send", class: "w-6 h-6") %>
        <span class="text-xs text-center">send</span>
      </div>
      
      <div class="flex flex-col items-center gap-2 p-3 rounded-lg bg-gray-50">
        <%= lucide_icon("calendar", class: "w-6 h-6") %>
        <span class="text-xs text-center">calendar</span>
      </div>
      
      <div class="flex flex-col items-center gap-2 p-3 rounded-lg bg-gray-50">
        <%= lucide_icon("target", class: "w-6 h-6") %>
        <span class="text-xs text-center">target</span>
      </div>
      
      <div class="flex flex-col items-center gap-2 p-3 rounded-lg bg-gray-50">
        <%= lucide_icon("notebook", class: "w-6 h-6") %>
        <span class="text-xs text-center">notebook</span>
      </div>
      
      <div class="flex flex-col items-center gap-2 p-3 rounded-lg bg-gray-50">
        <%= lucide_icon("palette", class: "w-6 h-6") %>
        <span class="text-xs text-center">palette</span>
      </div>
    </div>
    
    <div class="mt-4 p-4 bg-gray-50 rounded-lg">
      <h4 class="text-sm font-medium mb-2">Usage</h4>
      <code class="text-xs text-gray-600">&lt;%= lucide_icon("icon-name", class: "w-4 h-4") %&gt;</code>
    </div>
  </section>

  <!-- CSS Custom Properties -->
  <section class="bg-white rounded-xl p-6 shadow">
    <h2 class="text-lg font-medium mb-4">CSS Custom Properties</h2>
    
    <div class="bg-gray-50 p-4 rounded-lg">
      <pre class="text-sm text-gray-700 overflow-x-auto"><code>:root {
  --primary: hsl(12, 6%, 15%);
  --primary-foreground: hsl(20, 6%, 90%);
  --background: hsl(60, 9%, 98%);
  --foreground: hsl(20, 14%, 4%);
  --muted-foreground: hsl(25, 5%, 45%);
  --border: hsl(0, 0%, 83%);
  --destructive: hsl(0, 70%, 35%);
}</code></pre>
    </div>
  </section>
</div>