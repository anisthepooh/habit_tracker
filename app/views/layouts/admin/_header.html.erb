<header class="flex items-center justify-bewteen w-full gap-4 px-6 p-3 shadow-xs overflow-hidden min-h-16 relative z-10">
  <div class="flex items-center justify-start gap-4">
    <button data-action="click->sidebar#toggle" class="hover:bg-gray-200 w-6 h-6 flex items-center justify-center rounded-md cursor-pointer">
      <%= lucide_icon("panel-left", class:"w-4 h-4")%>
    </button>
    <div class="w-[1px] h-4 border border-[0.5px]"></div>
    <span class="text-sm capitalize">
      <div class="flex gap-2">
      <% breadcrumbs.each do |crumb| %>
      <div class="flex gap-2 items-center" >
        <% if crumb.link? %>
          <%= link_to crumb.name, crumb.path, class: "opacity-50 hover:opacity-100 hover:underline transition-all #{crumb == breadcrumbs.last ? "opacity-100" : ""} " %>
        <% else %>
          <span>
            <%= crumb.name %>
          </span>
        <% end %>

        <% unless crumb == breadcrumbs.last %>
          <%= lucide_icon("chevron-right", class: "w-4 h-4 text-muted-foreground")%>
        <% end %>
      </div>
      <% end %>
    </div>
    </span>
  </div>
  <div class="flex items-center gap-4 ml-auto">
    <%= yield :header_right_content%>
  </div>
</header>