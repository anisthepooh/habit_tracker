<% if user.errors.any? %>
  <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md">
    <h3>Please fix the following errors:</h3>
    <ul class="list-disc ml-6 mt-1">
      <% user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>