<div class="mx-auto max-w-2xl space-y-8 ">
  <div class="flex items-center gap-6">
    <div class="h-20 w-20 rounded-full bg-stone-200 flex items-center justify-center text-stone-500 text-2xl font-semibold shadow-sm">
      <%= @user.first_name.first.upcase if @user.first_name.present? %>
    </div>
    <div>
      <h1 class="text-2xl font-bold text-stone-800">
        <%= @user.first_name %> <%= @user.last_name %>
      </h1>
    </div>
  </div>

  <div class="grid gap-4 text-sm text-stone-700">
    <div>
      <span class="font-medium text-stone-600">Email:</span>
      <p class="text-stone-800"><%= @user.email_address %></p>
    </div>

  </div>

  <div>
    <%= link_to "Edit Profile", edit_user_path(@user), class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-primary hover:opacity-80 text-white inline-block font-medium cursor-pointer text-center" %>
    <%= button_to session_path, method: :delete, class: "flex items-center justify-center gap-2", form_class: "rounded-md my-6 px-3.5 py-2.5 bg-primary-foreground flex items-center justify-center text-primary font-semibold", data: { turbo_confirm: "Are you sure?" } do %>
      <%= lucide_icon('log-out') %>
      Log out
    <% end %>
  </div>
</div>
