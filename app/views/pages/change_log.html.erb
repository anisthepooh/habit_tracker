<section class="py-8">
  <section class="relative flex-1 flex flex-col justify-center items-center text-center px-4 py-10 rounded-b-2xl">
    <div class="absolute inset-2 bottom-0 rounded-4xl ring-1 ring-black/5 ring-inset bg-gradient-to-br from-[#fff1be] via-[#ee87cb] to-[#b060ff] sm:bg-gradient-to-bl"></div>
    <div class="relative flex-1 flex flex-col justify-center items-center text-center px-4 rounded-b-2xl">
      <% if @changelog_entries.any? %>
        <span class="inline-block bg-gray-100 text-gray-800 text-xs font-semibold px-2.5 py-0.5 rounded my-3">
          Last updated <%= @changelog_entries.first.date.strftime("%-d %B %Y") %>
        </span>
      <% end %>
      <h1 class="text-4xl md:text-5xl font-semibold tracking-tight mb-4">Changelog</h1>
      <p class="text-base md:text-lg max-w-xl text-neutral-500 mb-8">Get the latest updates and improvements to our platform.</p>
    </div>
  </section>

  <div class="container mx-auto px-4">
    <div class="mx-auto mt-16 max-w-3xl space-y-16 md:mt-24 md:space-y-24 text-left">
      <% @changelog_entries.each do |entry| %>
        <div class="relative flex flex-col gap-4 md:flex-row md:gap-16">
          <div class="top-28 flex h-min shrink-0 items-center gap-4 md:sticky">
            <span class="inline-block bg-gray-100 text-gray-800 text-xs font-semibold px-2.5 py-0.5 rounded">
              <%= entry.version %>
            </span>
            <span class="text-xs font-medium text-gray-500">
              <%= entry.date.strftime("%-d %B %Y") %>
            </span>
          </div>
          <div>
            <h2 class="mb-3 text-lg leading-tight font-bold text-gray-900 md:text-2xl">
              <%= entry.title %>
            </h2>
            <p class="text-sm text-gray-500 md:text-base">
              <%= entry.description %>
            </p>
            <p class="text-sm text-gray-500 md:text-base">
              <%= entry.items %>
            </p>
            
            <% if entry.image.present? %>
              <img src="<%= entry.image %>" alt="<%= entry.version %> visual" class="mt-8 w-full rounded-lg object-cover" />
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
