<%= link_to habit, class:"w-full" do %>
  <div class="bg-white rounded-2xl p-4  ">
    <div id="<%= dom_id habit %>" class="w-full flex items-center gap-3 ">
      <span class="rounded-full w-12 h-12 text-primary flex items-center justify-center bg-primary-foreground">
        <%= lucide_icon(habit.icon) %>
      </span>
      <div>
        <p class="font-semibold">
          <%= habit.name %>
        </p>
        <div class="text-muted-foreground flex gap-2 text-sm">
          <time datetime="<%= habit.start_date%>"><%= habit.start_date%></time>
          â€¢
          <p><%= habit.duration%></p>
        </div>
      </div>
    </div>
    <div class="w-full mt-3">
      <div class="flex w-full justify-between mb-2">
        <p class="text-sm font-medium">Progress</p>
        <p class="text-sm font-medium"><%="1/#{habit.duration} days"%> </p>
      </div>
      <div class="w-full bg-primary-foreground rounded-full h-2.5">
        <div class="bg-primary h-2.5 rounded-full" style="width: <%= number_to_percentage((habit.entries.size.to_f / habit.duration) * 100, precision: 0) %>"></div>
      </div>
    </div>
  </div>
<% end %>