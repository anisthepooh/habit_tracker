<% flash.each do |type, msg| %>
  <% next unless msg.present? %>
  <div
    data-controller="flash"
    data-flash-target="wrapper"
    class="fixed top-6 left-0 right-0 z-50 w-full px-4
           transition-opacity duration-500 ease-in-out opacity-0 animate-fade-in">
    <div class="mx-auto max-w-2xl flex items-center gap-3 rounded-xl border px-4 py-3 text-sm shadow-lg
                <%= type == 'alert' ? 'border-red-300 bg-red-50 text-red-700' :
                     type == 'notice' ? 'border-border bg-white text-text' :
                     'border-stone-300 bg-stone-50 text-stone-800' %>">
      <%= msg %>
    </div>
  </div>
<% end %>
