<div
  data-controller="pwa-prompt"
  data-pwa-prompt-target="wrapper"
  class="relative z-[9999] -translate-y-full transition-transform duration-500 ease-out hidden"
>
  <div class="bg-stone-200 flex gap-2 items-center p-4 shadow-lg">
    <button
      data-action="pwa-prompt#close"
      class="text-stone-600 hover:text-black"
    >
      <%= lucide_icon("x") %>
    </button>

    <div class="rounded-md bg-indigo-500 h-12 w-12 min-w-12 flex items-center justify-center relative overflow-hidden">
      <%= image_tag "/images/gradients/gradient_1.png", class: "absolute w-full h-full brightness-80 blur-sm z-10" %>
      <%= lucide_icon("pipette", class: "text-white z-10") %>
    </div>

    <div class="flex-1">
      <div class="text-sm font-semibold text-primary">Habit Tracker</div>
      <div class="text-xs text-muted-foreground">Track your habits and stay motivated!</div>
    </div>

    <button data-action="pwa-prompt#triggerInstall" class="rounded-full bg-black text-white px-2 text-sm font-medium py-1">Download</button>
  </div>
</div>
