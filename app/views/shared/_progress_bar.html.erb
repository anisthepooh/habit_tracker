<div class="w-full mt-3">
  <div class="flex w-full justify-between mb-2 text-stone-200">
    <p class="text-sm font-medium ">Progress</p>
    <p class="text-sm font-medium"><%="#{habit.elapsed_days}/#{habit.duration} days"%> </p>
  </div>
  <div class="w-full bg-stone-200 rounded-full p-0.5">
  <% if habit.entries.size == habit.duration %>
    <div class="bg-gradient-to-r from-green-400 to-green-500 h-2.5 rounded-full" style="width: 100%"></div>
  <% else %>
    <div class="bg-primary h-2.5 rounded-full" style="width: <%= habit.time_progress_percentage %>%"></div>
  <% end %>
</div>

</div>
